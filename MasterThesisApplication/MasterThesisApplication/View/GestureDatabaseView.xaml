<Window x:Class="MasterThesisApplication.View.GestureDatabaseView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:model="clr-namespace:MasterThesisApplication.Model;assembly=MasterThesisApplication.Model"
        mc:Ignorable="d"
        Title="GestureDatabaseView" Height="300" Width="300"
        DataContext="{Binding Source={StaticResource Locator}, Path= GestureDatabaseViewModel}"
        >
    <Window.Resources>
        <DataTemplate x:Key="ItemTemplate" DataType="model:Feature">
            <StackPanel>
                <TextBlock Text="{Binding Vector}"></TextBlock>
                <TextBlock Text="wqezxc"></TextBlock>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <TabControl ItemsSource="{Binding GestureCollection}"
                    SelectedItem="{Binding SelectedGesture}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding GestureName}"/>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <ListView>
                        <TextBlock Text="{Binding SelectedGesture.GestureName, Mode=OneWay}"></TextBlock>
                        <TextBlock Text="asdasd"></TextBlock>
                    </ListView>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Grid>
</Window>
